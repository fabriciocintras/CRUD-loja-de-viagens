@model Usuario
@{
    ViewData["Title"]="Cadastro de usuario";
}
<h2>Cadastro de usuario</h2>
<form asp-action="Cadastro" method="POST">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="DataNascimento">Data de nascimento:</label>
        <input asp-for="DataNascimento">
    </p>
    <p>
        <label asp-for="Login">Login:</label>
        <input asp-for="Login">
    </p>

    <p>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha">
    </p>
    <p>
        <label asp-for="Tipo">Tipo:</label>
        <select name="" id="" asp-for="Tipo">
            <option value="0">Administrador</option>
            <option value="1">Colaborador</option>
        </select>
    </p>
    <p>
        <input type="submit" value="Cadastrar">
    </p>

    <p id="Mensagem">
        @ViewBag.Mensagem
    </p>
</form>