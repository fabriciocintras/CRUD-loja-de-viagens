@model IEnumerable<Usuario>
    @{
        ViewData["Title"]= "Listagem dos usuarios";
    }
    <h2>Listagem dos usuarios</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Login</th>
                <th scope="col">Senha</th>
                <th scope="col">Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Usuario u in Model)
            {
                <tr>
                   
                    <td>@u.Id</td>
                    <td>@u.Nome</td>
                    <td>@u.DataNascimento</td>
                    <td>@u.Login</td>
                    <td>@u.Senha</td>
                    <td>@u.Tipo</td>
                    <td>
                        <a href="/Usuario/Editar?Id=@u.Id">Editar</a>
                        <a href="/Usuario/Remover?Id=@u.Id">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
